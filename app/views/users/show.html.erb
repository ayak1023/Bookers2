<!---user_show-->

<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <%= render 'books/side', book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% if @books.present? %>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(current_user) do %>
                    <%= image_tag current_user.get_profile_image(80,80) %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          <% else %>

          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>