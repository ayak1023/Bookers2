    <div class="col6 col-md-3">
      <h2>User info</h4>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table"><tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody></table>

      <div class="row">
        <div class="col">
          <%= link_to edit_user_path(current_user) ,class:"btn btn-outline-secondary btn-block edit_user_177899" do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
      </div>

      <h2 class="mt-4">New book</h4>
      <%= form_with model: book do |f| %> <!--@book-->
        <div class="mb-3">
          <p class="mb-0">Title</p>
          <%= f.text_field :title ,class:"form-control" %>
        </div>
        <div class="mb-3">
          <p class="mb-0">Opinion</p>
          <%= f.text_area :body ,class:"form-control" %>
        </div>
        <div><%= f.submit 'Create Book' ,class:"btn btn-success" %></div>
      <% end %>
    </div>