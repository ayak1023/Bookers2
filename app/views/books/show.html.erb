<div class="container">
  <div class="row">
    <!---テンプレ--->
    <%= render 'side', book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-inverse">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(current_user) do %>
                  <%= image_tag current_user.get_profile_image(80,80) %><br>
                  <%= current_user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to @book_id.title, book_path(@book_id.id) %>
              </td>
              <td>
                <%= @book_id.body %>
              </td>
              <td>
                <%= link_to "Edit", edit_book_path(@book_id.id) %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book_id.id), method: :delete, "data-confirm" => "Are you sure?" %>
              </td>
              <td></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>