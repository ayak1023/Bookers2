<div class="container">
  <div class="row">
    <div class="col6 col-md-3">
      <h2>User info</h4>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table"><tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody></table>

      <div class="row">
        <div class="col">
          <%= link_to edit_user_path(current_user) ,class:"btn btn-outline-secondary btn-block edit_user_177899" do %>
            <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>
      </div>

      <h2 class="mt-4">New book</h4>
      <%= form_with model: @book do |f| %>
        <div class="mb-3">
          <p class="mb-0">Title</p>
          <%= f.text_field :title ,class:"form-control" %>
        </div>
        <div class="mb-3">
          <p class="mb-0">Opinion</p>
          <%= f.text_area :body ,class:"form-control" %>
        </div>
        <div><%= f.submit 'Create Book' ,class:"btn btn-success" %></div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-inverse">
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(current_user) do %>
                  <%= image_tag current_user.get_profile_image(80,80) %><br>
                  <%= current_user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, "/books/#{book.id}" %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>