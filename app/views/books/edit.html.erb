<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h1>Editing Book</h1>

      <%= form_with model: @book do |f| %>
        <div class="mb-3">
          <p class="mb-0">Title</p>
          <%= f.text_field :title ,class:"form-control" %>
        </div>
        <div class="mb-3">
          <p class="mb-0">Opinion</p>
          <%= f.text_area :body ,class:"form-control" %>
        </div>
        <%= f.submit 'Update Book' ,class:"btn btn-success mb-3" %>

      <% end %>
      <%= link_to "Show", book_path(@book.id) %><span>ï½œ</span><%= link_to "Back", books_path %>
    </div>
  </div>
</div>